# --- BLOQUE ÚNICO PARA HTTP (Puerto 80) ---
server {
    listen 80;
    server_name api-adonplay.geniusdevelops.com frontend-adonplay.geniusdevelops.com player-adonplay.geniusdevelops.com myadmin.geniusdevelops.com ws-adonplay.geniusdevelops.com;

    # Carpeta compartida para que Certbot valide la propiedad del dominio
    location /.well-known/acme-challenge/ {
        root /var/www/certbot;
    }

    # Redirección global a HTTPS
    location / {
        return 301 https://$host$request_uri;
    }
}

# --- BACKEND / API (HTTPS) ---
server {
    listen 443 ssl;
    server_name api-adonplay.geniusdevelops.com;
    client_max_body_size 120M;

    ssl_certificate /etc/letsencrypt/live/api-adonplay.geniusdevelops.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/api-adonplay.geniusdevelops.com/privkey.pem;

    location / {
        proxy_pass http://adonplay-backend:9000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}

# --- FRONTEND (HTTPS) ---
server {
    listen 443 ssl;
    server_name frontend-adonplay.geniusdevelops.com;
    client_max_body_size 120M;

    ssl_certificate /etc/letsencrypt/live/frontend-adonplay.geniusdevelops.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/frontend-adonplay.geniusdevelops.com/privkey.pem;

    location / {
        proxy_pass http://adonplay-frontend:3000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}

# --- PLAYER (HTTPS) ---
server {
    listen 443 ssl;
    server_name player-adonplay.geniusdevelops.com;

    ssl_certificate /etc/letsencrypt/live/player-adonplay.geniusdevelops.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/player-adonplay.geniusdevelops.com/privkey.pem;

    location / {
        proxy_pass http://adonplay-player:3001;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}

# --- WEBSOCKETS (HTTPS) ---
server {
    listen 443 ssl;
    server_name ws-adonplay.geniusdevelops.com;

    ssl_certificate /etc/letsencrypt/live/ws-adonplay.geniusdevelops.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/ws-adonplay.geniusdevelops.com/privkey.pem;

    location / {
        proxy_pass http://adonplay-backend:9000;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "Upgrade";
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_read_timeout 86400s;
        proxy_send_timeout 86400s;
    }
}

# --- PHPMYADMIN (HTTPS) ---
server {
    listen 443 ssl;
    server_name myadmin.geniusdevelops.com;

    ssl_certificate /etc/letsencrypt/live/myadmin.geniusdevelops.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/myadmin.geniusdevelops.com/privkey.pem;

    location / {
        proxy_pass http://adonplay-phpmyadmin:80;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}